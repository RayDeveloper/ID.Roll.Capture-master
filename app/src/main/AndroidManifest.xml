<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uwi.sta.idrollcapture">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Setup"
            android:label="@string/title_activity_setup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCourse"
            android:label="@string/title_activity_edit_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
        android:name=".SelectDate"
        android:label="@string/title_activity_select_date"
        android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>
